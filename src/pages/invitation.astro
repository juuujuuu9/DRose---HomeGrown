---
import Layout from '../layouts/Layout.astro';

// Logos
const imgDerrickRoseDesktop = "/assets/Derrick%20Rose.svg";
const imgHomegrownCursiveDesktop = "/assets/Homegrown%20Cursive.svg";
const imgDerrickRoseMobile = "/assets/Derrick%20Rose.svg";
const imgHomegrownCursiveMobile = "/assets/Homegrown%20Cursive.svg";
---

<Layout title="RSVP" description="HOMEGROWN AT SIMEON" ogImage="/og-image-2.png">
  <!-- Desktop Layout (>lg) -->
   <style>
    body {
      background-color: #000000;
    }
   </style>
  <main id="desktop-main" class="hidden lg:flex min-h-screen bg-black relative overflow-hidden rounded-3xl animate-fade-in">
    <!-- Left Column: Image -->
    <div class="w-1/2 h-screen relative">
      <img 
        alt="Urban basketball court with elevated train tracks" 
        class="w-full h-full object-cover" 
        src="/bg-photo.png" 
      />
    </div>

    <!-- Right Column: Content Panel -->
    <div id="right-column" class="w-1/2 h-screen bg-[#F5F5F5] flex flex-col px-12 py-16 overflow-y-auto">
      <!-- Top: Logo -->
      <div class="flex flex-col items-center gap-[10px] pt-8">
        <div class="h-[79px] w-[81px] relative">
          <img alt="Derrick Rose logo" class="w-full h-full object-contain" src={imgDerrickRoseDesktop} />
        </div>
        <div class="h-[110px] w-[418px] relative">
          <img alt="Homegrown" class="w-full h-full object-contain" src={imgHomegrownCursiveDesktop} />
        </div>
      </div>

      <!-- Event Details -->
      <div class="event-details-section flex items-start justify-between gap-8 mt-12 mb-8">
        <div class="flex-1">
          <p class="text-[18px] lg:text-[22px] uppercase tracking-wider text-gray-700 mb-0 font-roboto-condensed">DATE</p>
          <p class="text-[18px] lg:text-[22px] font-semibold text-gray-900 font-roboto-condensed uppercase">FRIDAY<br />01.23.26</p>
        </div>
        <div class="event-details-divider w-px h-24 bg-[#CE1141]"></div>
        <div class="flex-1">
          <p class="text-[18px] lg:text-[22px] uppercase tracking-wider text-gray-700 mb-0 font-roboto-condensed">TIME</p>
          <p class="text-[18px] lg:text-[22px] font-semibold text-gray-900 font-roboto-condensed uppercase">DOORS 6PM<br />TIP-OFF 7:30PM</p>
        </div>
        <div class="event-details-divider w-px h-24 bg-[#CE1141]"></div>
        <div class="flex-1">
          <p class="text-[18px] lg:text-[22px] uppercase tracking-wider text-gray-700 mb-0 font-roboto-condensed">LOCATION</p>
          <p class="text-[18px] lg:text-[22px] font-semibold text-gray-900 font-roboto-condensed uppercase">SIMEON<br />CAREER ACADEMY</p>
        </div>
      </div>

      <!-- Main Message -->
      <div class="flex-1 flex items-center py-8">
        <h1 class="text-4xl font-light text-gray-900 leading-tight font-roboto-condensed uppercase">
          JOIN US AS WE CELEBRATE THE HISTORY AND LEGACY OF{' '}
          <span class="text-[#CE1141] font-bold">CHICAGO BASKETBALL</span>. ON THE EVE OF DERRICK ROSE'S JERSEY RETIREMENT.
        </h1>
      </div>

      <!-- RSVP Button -->
      <div class="mb-8">
        <a 
          href="/invitation/rsvp2026" 
          class="block w-full bg-[#CE1141] hover:bg-[#a00d33] text-white text-center py-2 px-8 text-[26px] font-normal font-prohibition uppercase tracking-[4.80px] break-words transition-colors duration-200"
        >
          RSVP HERE
        </a>
      </div>

      <!-- Footer -->
      <div class="flex items-center justify-between">
        <div class="border border-gray-900 px-2 py-0.5">
          <p class="text-[12px] uppercase tracking-[0.75px] text-[#212121] font-normal font-roboto-condensed break-words">HOMEGROWN AT SIMEON<br />8147 S Vincennes Ave<br />
            Chicago, IL 60620</p>
        </div>
        <div class="flex items-center gap-2">
          <div class="text-right">
            <p class="text-[15px] uppercase text-[#212121] font-bold font-roboto-condensed break-words">HOME<br>GAME</p>
          </div>
          <div class="bg-[#CE1141] text-white w-12 h-18 flex items-center justify-center">
            <span class="font-prohibition text-[36px] tracking-[7.20px] pb-[7px]">1</span>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Mobile Layout -->
  <main class="lg:hidden min-h-screen bg-black flex items-center justify-center">
    <!-- Card Container -->
    <div class="card-container w-full bg-[#F2F2F2] rounded-3xl overflow-hidden relative animate-fade-in">
      <!-- Top: Logo -->
      <div class="flex flex-col items-center gap-[10px] pt-12 pb-8">
        <div class="h-[60px] w-[61.535px] relative">
          <img alt="Derrick Rose logo" class="w-full h-full object-contain" src={imgDerrickRoseMobile} />
        </div>
        <div class="h-[84px] w-[320px] relative">
          <img alt="Homegrown" class="w-full h-full object-contain" src={imgHomegrownCursiveMobile} />
        </div>
      </div>

      <!-- Event Details -->
      <div class="px-4 pb-6">
        <div class="flex items-start justify-between gap-4">
          <div class="flex-1">
            <p class="text-xs uppercase tracking-wider text-gray-700 mb-1 font-roboto-condensed">DATE</p>
            <p class="text-sm font-semibold text-gray-900 font-roboto-condensed uppercase">FRIDAY<br />01.23.26</p>
          </div>
          <div class="w-px h-14 bg-[#CE1141]"></div>
          <div class="flex-1">
            <p class="text-xs uppercase tracking-wider text-gray-700 mb-1 font-roboto-condensed">TIME</p>
            <p class="text-sm font-semibold text-gray-900 font-roboto-condensed uppercase">DOORS 6PM<br />TIP-OFF 7:30PM</p>
          </div>
          <div class="w-px h-14 bg-[#CE1141]"></div>
          <div class="flex-1">
            <p class="text-xs uppercase tracking-wider text-gray-700 mb-1 font-roboto-condensed">HOMEGROWN</p>
            <p class="text-sm font-semibold text-gray-900 font-roboto-condensed uppercase">SIMEON<br />CAREER ACADEMY</p>
          </div>
        </div>
      </div>

      <!-- Image -->
      <div class="p-0 mb-8 aspect-square">
        <!-- <div class="border-t-2 border-dotted border-gray-400"></div> -->
        <img 
          alt="Urban basketball court with elevated train tracks" 
          class="w-full h-auto" 
          src="/bg-photo.png" 
        />
      </div>

      <!-- Call to Action Text -->
      <div class="px-6 pb-6">
        <p class="text-lg font-bold text-gray-900 text-center uppercase leading-tight font-roboto-condensed">
          JOIN US AS WE CELEBRATE THE HISTORY AND LEGACY OF{' '}
          <span class="text-[#CE1141] font-bold">CHICAGO BASKETBALL</span>. ON THE EVE OF DERRICK ROSE'S JERSEY RETIREMENT.
        </p>
      </div>

      <!-- RSVP Button -->
      <div class="p-0">
        <a 
          href="/invitation/rsvp2026" 
          class="block w-full bg-[#CE1141] hover:bg-[#a00d33] text-white text-center py-4 px-8 text-[24px] font-normal font-prohibition uppercase tracking-[4.80px] break-words transition-colors duration-200"
        >
          RSVP HERE
        </a>
      </div>

      <!-- Footer -->
      <div class="px-6 py-6 flex items-center justify-between">
        <div class="border border-gray-900 px-2 py-0.5">
          <p class="text-[12px] uppercase tracking-[0.75px] text-[#212121] font-normal font-roboto-condensed break-words">HOMEGROWN AT SIMEON<br />8147 S Vincennes Ave<br />
            Chicago, IL 60620</p>
        </div>
        <div class="flex items-center gap-2">
          <div class="text-right">
            <p class="text-[15px] uppercase text-[#212121] font-bold font-roboto-condensed break-words">HOME</p>
            <p class="text-[15px] uppercase text-[#212121] font-bold font-roboto-condensed break-words">GAME</p>
          </div>
          <div class="bg-[#CE1141] text-white w-10 h-16 flex items-center justify-center  pb-3 pl-1 text-[36px] font-normal font-prohibition uppercase tracking-[7.20px] leading-none">
            1
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Apply Roboto Condensed to all text on this page, except Prohibition font */
  main,
  main *:not(.font-prohibition) {
    font-family: 'Roboto Condensed', sans-serif !important;
  }

  /* Subtle texture overlay for mobile card */
  .card-container {
    background-image: 
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(0, 0, 0, 0.015) 2px,
        rgba(0, 0, 0, 0.015) 4px
      );
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  /* Event Details gap adjustment for screens < 1339px */
  @media (max-width: 1338px) {
    .event-details-section {
      gap: 1rem !important; /* gap-4 */
    }
  }

  /* Event Details text size adjustment for screens < 1623px */
  @media (max-width: 1622px) {
    .event-details-section p {
      font-size: 1rem !important;
    }
    .event-details-divider {
      height: 4rem !important; /* h-16 */
    }
  }
</style>

<script>
  // Forward wheel events to right column when scrolling over left side
  document.addEventListener('DOMContentLoaded', () => {
    const main = document.getElementById('desktop-main');
    const rightColumn = document.getElementById('right-column');
    
    if (!main || !rightColumn) return;
    
    // Listen for wheel events on the main container
    main.addEventListener('wheel', (e) => {
      // Only handle if the event is not already on the right column
      const target = e.target as HTMLElement;
      if (rightColumn.contains(target)) {
        // Let the right column handle its own scrolling
        return;
      }
      
      // Prevent default scrolling behavior
      e.preventDefault();
      
      // Forward the scroll to the right column
      const scrollAmount = e.deltaY;
      rightColumn.scrollTop += scrollAmount;
    }, { passive: false });
  });
</script>
