---
import Layout from '../layouts/Layout.astro';
import { isAuthenticated } from '../lib/auth';

// Check authentication
if (!isAuthenticated(Astro.cookies)) {
  return Astro.redirect('/login', 302);
}
---

<Layout title="Admin Dashboard">
  <main class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-900">Admin Dashboard</h1>
        <button
          id="logout-button"
          class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors"
        >
          Logout
        </button>
      </div>
    </header>

    <!-- Content -->
    <div class="container mx-auto px-4 py-8">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">Registration Entries</h2>
          <p class="text-sm text-gray-600 mt-1" id="entries-count">Loading...</p>
        </div>

        <!-- Loading state -->
        <div id="loading-state" class="p-8 text-center">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
          <p class="mt-4 text-gray-600">Loading entries...</p>
        </div>

        <!-- Error state -->
        <div id="error-state" class="hidden p-8">
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            <p id="error-message">Failed to load entries. Please try again.</p>
          </div>
        </div>

        <!-- Entries table -->
        <div id="entries-container" class="hidden overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Name
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Email
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Phone
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Alternative Contact
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Address
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Sizes
                </th>
              </tr>
            </thead>
            <tbody id="entries-tbody" class="bg-white divide-y divide-gray-200">
              <!-- Entries will be inserted here -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Format date for display
  function formatDate(dateString: string): string {
    const date = new Date(dateString);
    return date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });
  }

  // Format sizes for display
  function formatSizes(entry: any): string {
    const sizes = [];
    if (entry.top_size) sizes.push(`Top: ${entry.top_size}`);
    if (entry.bottom_size) sizes.push(`Bottom: ${entry.bottom_size}`);
    if (entry.jacket_size) sizes.push(`Jacket: ${entry.jacket_size}`);
    if (entry.tight_size) sizes.push(`Tight: ${entry.tight_size}`);
    if (entry.shoe_size) sizes.push(`Shoe: ${entry.shoe_size}`);
    return sizes.join(', ');
  }

  // Load entries
  async function loadEntries() {
    const loadingState = document.getElementById('loading-state');
    const errorState = document.getElementById('error-state');
    const entriesContainer = document.getElementById('entries-container');
    const entriesTbody = document.getElementById('entries-tbody');
    const entriesCount = document.getElementById('entries-count');
    const errorMessage = document.getElementById('error-message');

    try {
      const response = await fetch('/api/admin/entries');
      
      if (!response.ok) {
        if (response.status === 401) {
          // Unauthorized - redirect to login
          window.location.href = '/login';
          return;
        }
        throw new Error('Failed to load entries');
      }

      const result = await response.json();
      
      if (loadingState) loadingState.classList.add('hidden');
      
      if (result.success && result.data) {
        const entries = result.data;
        
        if (entriesCount) {
          entriesCount.textContent = `${entries.length} ${entries.length === 1 ? 'entry' : 'entries'}`;
        }

        if (entries.length === 0) {
          if (entriesTbody) {
            entriesTbody.innerHTML = `
              <tr>
                <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                  No entries yet.
                </td>
              </tr>
            `;
          }
        } else {
          if (entriesTbody) {
            entriesTbody.innerHTML = entries.map((entry: any) => `
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  ${formatDate(entry.created_at)}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  ${entry.name}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  ${entry.email}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  ${entry.phone}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  ${entry.alternative_contact_name}
                </td>
                <td class="px-6 py-4 text-sm text-gray-600 max-w-xs truncate">
                  ${entry.address}
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">
                  ${formatSizes(entry)}
                </td>
              </tr>
            `).join('');
          }
        }

        if (entriesContainer) entriesContainer.classList.remove('hidden');
      } else {
        throw new Error('Invalid response format');
      }
    } catch (error) {
      console.error('Error loading entries:', error);
      if (loadingState) loadingState.classList.add('hidden');
      if (errorState) errorState.classList.remove('hidden');
      if (errorMessage) {
        errorMessage.textContent = error instanceof Error ? error.message : 'Failed to load entries. Please try again.';
      }
    }
  }

  // Logout handler
  document.getElementById('logout-button')?.addEventListener('click', async () => {
    try {
      const response = await fetch('/api/logout', {
        method: 'POST'
      });

      if (response.ok) {
        window.location.href = '/login';
      } else {
        console.error('Logout failed');
      }
    } catch (error) {
      console.error('Logout error:', error);
    }
  });

  // Load entries on page load
  loadEntries();
</script>

