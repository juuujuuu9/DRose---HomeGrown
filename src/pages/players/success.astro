---
import Layout from '../../layouts/Layout.astro';

// Background image - local file
const imgBackground = "/assets/bg-1.png";
// Desktop logos
const imgDerrickRoseDesktop = "/assets/Derrick%20Rose.svg";
const imgHomegrownCursiveDesktop = "/assets/Homegrown%20Cursive.svg";
// Mobile logos
const imgDerrickRoseMobile = "/assets/Derrick%20Rose.svg";
const imgHomegrownCursiveMobile = "/assets/Homegrown%20Cursive.svg";
---

<Layout title="Success">
  <main class="min-h-screen bg-black relative overflow-hidden">
    <!-- Background Image -->
    <div aria-hidden="true" class="absolute inset-0 pointer-events-none">
      <div class="absolute bg-black inset-0"></div>
      <img 
        alt="" 
        class="absolute inset-0 max-w-none object-50%-50% object-cover size-full opacity-50" 
        src={imgBackground} 
      />
    </div>

    <!-- Main Content -->
    <div class="relative z-10 flex flex-col gap-5 items-center justify-center pb-12 pt-[90px] px-0 min-h-screen animate-fade-in">
      <!-- Container -->
      <div class="flex flex-1 flex-col gap-5 items-center min-h-0 overflow-clip px-5 py-0 w-full max-w-[1440px]">
        <!-- Top Branding -->
        <p class="font-prohibition leading-normal not-italic relative shrink-0 text-[#ce1141] text-[30px] uppercase w-full whitespace-pre-wrap text-center">
          <span class="tracking-[3.9px] lg:tracking-[32px] xl:tracking-[48px] inline-block -mr-[3.9px] lg:-mr-[48px]">Homegrown  at  Simeon</span>
        </p>

        <!-- Main Content Box - Vertically Centered Content -->
        <div class="flex flex-1 flex-col justify-between items-center min-h-0 w-full">
          <!-- Spacer to push content to center -->
          <div class="flex-1 flex items-center justify-center w-full">
            <!-- Mobile: Content Frame with Border -->
            <div class="lg:hidden flex flex-col gap-8 items-center justify-center px-6 py-8 w-full border border-gray-700/50">
              <!-- Logo Section -->
              <div class="flex flex-col gap-[10px] items-center">
                <div class="h-[60px] relative shrink-0 w-[61.535px]">
                  <img alt="Derrick Rose" class="block max-w-none size-full" src={imgDerrickRoseMobile} />
                </div>
                <div class="h-[84px] relative shrink-0 w-[320px]">
                  <img alt="Homegrown" class="block max-w-none size-full" src={imgHomegrownCursiveMobile} />
                </div>
              </div>

              <!-- Success Message -->
              <p class="font-prohibition leading-normal text-[#ce1141] text-[22px] uppercase text-center tracking-[2px] px-4">
                YOUR SUBMISSION HAS BEEN RECEIVED!
              </p>
            </div>

            <!-- Desktop: Content (no border) -->
            <div class="hidden lg:flex flex-col gap-12 items-center justify-center px-6 py-8 w-full">
              <!-- Logo Section -->
              <div class="flex flex-col gap-[10px] items-center">
                <div class="h-[79px] relative shrink-0 w-[81px]">
                  <img alt="Derrick Rose" class="block max-w-none size-full" src={imgDerrickRoseDesktop} />
                </div>
                <div class="h-[110px] relative shrink-0 w-[418px]">
                  <img alt="Homegrown" class="block max-w-none size-full" src={imgHomegrownCursiveDesktop} />
                </div>
              </div>

              <!-- Success Message -->
              <p class="font-prohibition leading-normal text-[#ce1141] text-[36px] uppercase text-center tracking-[4px]">
                YOUR SUBMISSION HAS BEEN RECEIVED!
              </p>
            </div>
          </div>

          <!-- Back to RSVP Button -->
          <a 
            href="/players/rsvp"
            class="bg-[#ce1141] hover:bg-[#b01038] cursor-pointer flex items-center justify-center px-6 py-3 w-[362px] lg:w-full border-0 transition-colors duration-200 shrink-0"
          >
            <span class="font-prohibition leading-none text-[20px] text-white tracking-[4px] uppercase inline-block -mr-[4px] pb-[5px]">
              BACK TO RSVP
            </span>
          </a>
        </div>

        <!-- Bottom Branding -->
        <p class="font-prohibition leading-normal not-italic relative shrink-0 text-[#ce1141] text-[30px] uppercase w-full whitespace-pre-wrap text-center">
          <span class="tracking-[3.9px] lg:tracking-[32px] xl:tracking-[48px] inline-block -mr-[3.9px] lg:-mr-[48px]">Homegrown  at  Simeon</span>
        </p>
      </div>
    </div>
  </main>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }
</style>
