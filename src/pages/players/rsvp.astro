              <div class="gap-12 flex flex-col md:grid md:grid-cols-2 relative shrink-0 w-full">
                <!-- Left Column: Letter Text + What You Get + Schedule (50%) -->
                <div class="flex flex-col gap-[40px] items-start md:items-center pb-0 pt-0 px-[8px] md:px-0 relative self-start shrink-0 w-full md:max-w-[555px]">
                  <!-- Letter Text -->
                  <div class=" md:mt-[37px] font-roboto-condensed font-normal leading-[24px] md:leading-[32px] relative shrink-0 text-[16px] md:text-[18px] text-center md:text-center text-white uppercase w-full break-words">
