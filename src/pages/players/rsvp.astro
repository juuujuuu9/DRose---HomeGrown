---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';

// Background image - local file
const imgBackground = "/assets/bg-1.png";
// Desktop logos - local files
const imgDerrickRoseDesktop = "/assets/Derrick%20Rose.svg";
const imgHomegrownCursiveDesktop = "/assets/Homegrown%20Cursive.svg";
// Mobile logos - local files
const imgDerrickRoseMobile = "/assets/Derrick%20Rose.svg";
const imgHomegrownCursiveMobile = "/assets/Homegrown%20Cursive.svg";
// Small logo for "What You Get" section
const imgDerrickRoseSmall = "/assets/Derrick%20Rose.svg";
---

<Layout title="RSVP" description="HOMEGROWN AT SIMEON">
  <main class="min-h-screen bg-black relative overflow-hidden">
    <!-- Background Image -->
    <div aria-hidden="true" class="absolute inset-0 pointer-events-none">
      <img 
        alt="" 
        class="absolute inset-0 max-w-none object-50%-50% object-cover size-full" 
        src={imgBackground} 
      />
    </div>

    <!-- Main Content -->
    <div class="relative z-10 flex flex-col gap-[20px] items-center justify-center pb-[48px] pt-[90px] px-0 min-h-screen animate-fade-in">
      <!-- Container -->
      <div class="flex flex-col gap-[80px] items-center overflow-clip px-[20px] py-0 relative shrink-0 w-full max-w-[1440px]">
        <!-- Top Branding -->
        <p class="font-prohibition leading-normal not-italic relative shrink-0 text-[#ce1141] text-[30px] text-center tracking-[48px] uppercase w-full whitespace-pre-wrap">
          Homegrown  at  Simeon
        </p>

        <!-- Main Content Box with Border -->
        <div class="flex flex-col items-center pb-0 pt-[40px] px-0 relative shrink-0 w-full">
          <div class="flex flex-col gap-[60px] items-center justify-center relative shrink-0 w-full">
            <!-- Logo Section -->
            <div class="flex flex-col gap-[10px] items-center overflow-clip px-[24px] py-[10px] relative shrink-0 w-[600px]">
              <div class="h-[79px] relative shrink-0 w-[81px]">
                <img alt="Derrick Rose" class="block max-w-none size-full" src={imgDerrickRoseDesktop} />
              </div>
              <div class="h-[110px] relative shrink-0 w-[418px]">
                <img alt="Homegrown" class="block max-w-none size-full" src={imgHomegrownCursiveDesktop} />
              </div>
            </div>

            <!-- Form Container with Backdrop Blur -->
            <div class="flex flex-col gap-[12px] items-center px-[24px] py-[20px] pb-0 relative shrink-0 w-full">
              <!-- Two Column Grid: Left (Letter + Info) / Right (Form) -->
              <div class="gap-12 grid grid-cols-2 relative shrink-0 w-full">
                <!-- Left Column: Letter Text + What You Get + Schedule (50%) -->
                <div class="col-[1] flex flex-col gap-[40px] items-center pb-0 pt-0 px-0 relative self-start shrink-0 max-w-[555px]">
                  <!-- Letter Text -->
                  <div class="font-roboto-condensed font-normal leading-[32px] relative shrink-0 text-[18px] text-center text-white uppercase w-full break-words">
                    <p class="mb-0">
                      We all know Chicago hoopers are built different. From playgrounds to packed gyms, The Southside to out West, our grit and toughness have never been denied.<br />
                      <span>Not then. Not now. </span>
                      <span>Not ever. We are </span>
                      <span class="font-roboto-condensed font-bold">Homegrown.</span><br />
                      On the eve of my jersey retirement, it only makes sense to bring the city together for a pickup game at Simeon.<br>A light run that celebrates the rich history of Chicago basketball.<br />A history that doesn't exist without you.<br />Let's <span class="font-roboto-condensed font-normal">hoop!</span><br />
                      <br />Peace and Love,<br />
                      Pooh
                    </p>
                  </div>

                  <!-- What You Get Section -->
                  <div class="flex flex-col gap-[24px] items-center justify-center relative shrink-0 w-full">
                    <p class="font-roboto-condensed font-bold leading-[36px] relative shrink-0 text-[32px] text-center text-white uppercase w-full whitespace-pre-wrap">
                      What You Get
                    </p>
                    <div class="flex flex-col items-start relative shrink-0 w-full">
                      <div class="flex flex-col gap-[12px] items-start relative shrink-0 w-full">
                        <div class="flex flex-col gap-[10px] items-center justify-center relative shrink-0 w-full">
                          <div class="border border-solid border-white flex items-center px-[20px] py-[12px] relative rounded-[8px] shrink-0 w-full">
                            <div class="relative shrink-0 size-[35px] ml-[30px]">
                              <img alt="Derrick Rose" class="block max-w-none size-full" src={imgDerrickRoseSmall} />
                            </div>
                            <p class="font-roboto-condensed font-bold leading-[36px] absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-[18px] text-center text-white uppercase whitespace-nowrap">
                              2 tickets to Bulls vs Celtics on 1.24
                            </p>
                          </div>
                          <div class="border border-solid border-white flex items-center px-[20px] py-[12px] relative rounded-[8px] shrink-0 w-full">
                            <div class="relative shrink-0 size-[35px] ml-[30px]">
                              <img alt="Derrick Rose" class="block max-w-none size-full" src={imgDerrickRoseSmall} />
                            </div>
                            <p class="font-roboto-condensed font-bold leading-[36px] absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-[18px] text-center text-white uppercase whitespace-nowrap">
                              5 tickets to the Homegrown game
                            </p>
                          </div>
                        </div>
                        <div class="flex flex-col gap-[10px] items-center justify-center relative shrink-0 w-full">
                          <div class="border border-solid border-white flex items-center px-[20px] py-[12px] relative rounded-[8px] shrink-0 w-full">
                            <div class="relative shrink-0 size-[35px] ml-[30px]">
                              <img alt="Derrick Rose" class="block max-w-none size-full" src={imgDerrickRoseSmall} />
                            </div>
                            <p class="font-roboto-condensed font-bold leading-[36px] absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-[18px] text-center text-white uppercase whitespace-nowrap">
                              Exclusive merch
                            </p>
                          </div>
                          <div class="border border-solid border-white flex items-center px-[20px] py-[12px] relative rounded-[8px] shrink-0 w-full">
                            <div class="relative shrink-0 size-[35px] ml-[30px]">
                              <img alt="Derrick Rose" class="block max-w-none size-full" src={imgDerrickRoseSmall} />
                            </div>
                            <p class="font-roboto-condensed font-bold leading-[36px] absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-[18px] text-center text-white uppercase whitespace-nowrap">
                              An unforgettable experience
                            </p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Schedule Section -->
                  <div class="flex flex-col gap-[36px] items-center justify-center relative shrink-0 w-full">
                    <p class="font-roboto-condensed font-bold leading-[36px] relative shrink-0 text-[32px] text-center text-white uppercase w-full whitespace-pre-wrap">
                      schedule
                    </p>
                    <div class="flex flex-col gap-[50px] items-start relative shrink-0 w-full">
                      <!-- Row 1: VIP Happy Hour -->
                      <div class="flex gap-[20px] items-center relative shrink-0 w-full">
                        <p class="font-roboto-condensed font-bold leading-[22px] text-[20px] text-white uppercase break-words flex-1">
                          VIP Happy Hour doors open
                        </p>
                        <div class="bg-[#8c0a2b] inline-flex items-center justify-center gap-[10px] px-[20px] py-[12px] relative rounded-[8px] shrink-0 w-[146px]">
                          <p class="font-roboto-condensed font-normal leading-[36px] text-[24px] text-white uppercase break-words">
                            5:00 PM
                          </p>
                        </div>
                      </div>
                      
                      <!-- Row 2: Players report -->
                      <div class="flex gap-[20px] items-center relative shrink-0 w-full">
                        <p class="font-roboto-condensed font-bold leading-[22px] text-[20px] text-white uppercase break-words flex-1">
                          Players report to locker room
                        </p>
                        <div class="bg-[#8c0a2b] inline-flex items-center justify-center gap-[10px] px-[20px] py-[12px] relative rounded-[8px] shrink-0 w-[146px]">
                          <p class="font-roboto-condensed font-normal leading-[36px] text-[24px] text-white uppercase break-words">
                            6:15 PM
                          </p>
                        </div>
                      </div>
                      
                      <!-- Row 3: Warm up -->
                      <div class="flex gap-[20px] items-start relative shrink-0 w-full">
                        <div class="flex flex-col gap-[4px] items-start relative shrink-0 flex-1">
                          <p class="font-roboto-condensed font-bold leading-[22px] text-[20px] text-white uppercase break-words">
                            Warm up
                          </p>
                          <p class="font-roboto-condensed font-light leading-[22px] text-[16px] tracking-[0.8px] text-white uppercase break-words">
                            Trainer available on site
                          </p>
                        </div>
                        <div class="bg-[#8c0a2b] inline-flex items-center justify-center gap-[10px] px-[20px] py-[12px] relative rounded-[8px] shrink-0 w-[146px]">
                          <p class="font-roboto-condensed font-normal leading-[36px] text-[24px] text-white uppercase break-words">
                            6:30 PM
                          </p>
                        </div>
                      </div>
                      
                      <!-- Row 4: Tip Off -->
                      <div class="flex gap-[20px] items-center relative shrink-0 w-full">
                        <p class="font-roboto-condensed font-bold leading-[22px] text-[20px] text-white uppercase break-words flex-1">
                          Tip Off
                        </p>
                        <div class="bg-[#8c0a2b] inline-flex items-center justify-center gap-[10px] px-[20px] py-[12px] relative rounded-[8px] shrink-0 w-[146px]">
                          <p class="font-roboto-condensed font-normal leading-[36px] text-[24px] text-white uppercase break-words">
                            7:00 PM
                          </p>
                        </div>
                      </div>
                    </div>
                    <div class="flex flex-col items-center justify-center relative shrink-0 w-full">
                      <div class="flex gap-[43px] items-center justify-center relative shrink-0">
                        <div class="flex items-center justify-center p-[10px] relative shrink-0">
                          <p class="font-roboto-condensed font-bold leading-[36px] relative shrink-0 text-[20px] text-center text-white uppercase">
                            Halftime ceremony to honor Bulls teammates
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Right Column: Form (50%) -->
                <div class="col-[2] flex flex-col gap-[20px] items-start pb-[60px] pt-0 px-0 relative self-start shrink-0">
                  <div class="flex items-start relative shrink-0 w-full">
                    <ContactForm />
                  </div>
                  
                  <!-- Submit Button -->
                  <div class="flex flex-col gap-[25px] items-center relative shrink-0 w-full">
                    <button
                      type="submit"
                      form="registration-form"
                      id="submit-button-wrapper"
                      class="bg-[#ce1141] cursor-pointer flex flex-col items-center overflow-clip px-[24px] py-[12px] relative rounded-[8px] shrink-0 w-full hover:bg-[#b01038] transition-colors"
                    >
                      <span class="font-prohibition leading-normal not-italic relative shrink-0 text-[20px] text-center text-white tracking-[4px] uppercase w-full">
                        SUBMIT RSVP
                      </span>
                    </button>
                    
                    <!-- Hotel Section -->
                    <div class="flex flex-col gap-[20px] items-center justify-center relative shrink-0 w-full">
                      <p class="font-roboto-condensed font-normal leading-[28px] relative shrink-0 text-[24px] text-center text-white uppercase w-full break-words">
                        Need a hotel?
                      </p>
                      <p class="font-roboto-condensed font-normal leading-[28px] relative shrink-0 text-[20px] text-center text-white uppercase w-full break-words">
                        We've got a Hoxton discount for the team
                      </p>
                      <div class="border border-solid border-white flex items-center justify-center px-[20px] py-[12px] relative rounded-[8px] shrink-0">
                        <p class="font-roboto-condensed font-bold leading-[28px] relative shrink-0 text-[18px] text-center text-white uppercase break-words">
                          CODE: DROSE26
                        </p>
                      </div>
                    </div>
                    
                    <!-- Contact Information -->
                    <div class="flex items-center justify-center relative shrink-0 w-full">
                      <p class="font-roboto-condensed font-normal leading-[32px] relative shrink-0 text-[18px] text-center text-white uppercase w-full break-words">
                        For questions or additional details please reach out to one of the following:
                      </p>
                    </div>
                    
                    <div class="flex gap-[60px] items-start relative shrink-0 w-full">
                      <div class="flex items-center justify-center relative shrink-0 flex-1">
                        <div class="font-roboto-condensed font-normal leading-[0] relative shrink-0 text-[18px] text-center text-white uppercase w-full break-words">
                          <p class="font-roboto-condensed font-bold leading-[32px] mb-0">Art Bashkin</p>
                          <p class="leading-[32px]">
                            <a class="cursor-pointer font-roboto-condensed font-bold text-[#ce1141] underline leading-[32px] break-words" href="tel:2244429680">
                              224.442.9680
                            </a>
                            <span><br aria-hidden="true" /></span>
                            <a class="cursor-pointer font-roboto-condensed font-bold text-[#ce1141] underline leading-[32px] break-words" href="mailto:Art@dmr-ventures.com">
                              Art@dmr-ventures.com
                            </a>
                          </p>
                        </div>
                      </div>
                      <div class="flex items-center justify-center relative shrink-0 flex-1">
                        <div class="font-roboto-condensed font-normal leading-[0] relative shrink-0 text-[18px] text-center text-white uppercase w-full break-words">
                          <p class="font-roboto-condensed font-bold leading-[32px] mb-0">Randall Hampton</p>
                          <p class="leading-[32px]">
                            <a class="cursor-pointer font-roboto-condensed font-bold text-[#ce1141] underline leading-[32px] break-words" href="tel:8476915913">
                              847.691.5913
                            </a>
                            <span><br aria-hidden="true" /></span>
                            <a class="cursor-pointer font-roboto-condensed font-bold text-[#ce1141] underline leading-[32px] break-words" href="mailto:Randall@dmr-ventures.com">
                              Randall@dmr-ventures.com
                            </a>
                          </p>
                        </div>
                      </div>
                    </div>
                    <div class="flex items-start relative shrink-0 w-full">
                      <div class="flex items-center justify-center relative shrink-0 flex-1">
                        <div class="font-roboto-condensed font-normal leading-[0] relative shrink-0 text-[18px] text-center text-white uppercase w-full break-words">
                          <p class="font-roboto-condensed font-bold leading-[32px] mb-0">Madison Ornstil</p>
                          <p class="leading-[32px]">
                            <a class="cursor-pointer font-roboto-condensed font-bold text-[#ce1141] underline leading-[32px] break-words" href="tel:9713033068">
                              971.303.3068
                            </a>
                            <span><br aria-hidden="true" /></span>
                            <a class="cursor-pointer font-roboto-condensed font-bold text-[#ce1141] underline leading-[32px] break-words" href="mailto:Madison@dmr-ventures.com">
                              Madison@dmr-ventures.com
                            </a>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Bottom Branding -->
        <p class="font-prohibition leading-normal not-italic relative shrink-0 text-[#ce1141] text-[30px] text-center tracking-[48px] uppercase w-full whitespace-pre-wrap">
          Homegrown  at  Simeon
        </p>
      </div>
    </div>
  </main>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }
</style>
