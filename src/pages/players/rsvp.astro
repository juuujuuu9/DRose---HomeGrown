---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';

// Background image - local file
const imgBackground = "/assets/bg-1.png";
// Desktop logos - local files
const imgDerrickRoseDesktop = "/assets/Derrick%20Rose.svg";
const imgHomegrownCursiveDesktop = "/assets/Homegrown%20Cursive.svg";
// Mobile logos - local files
const imgDerrickRoseMobile = "/assets/Derrick%20Rose.svg";
const imgHomegrownCursiveMobile = "/assets/Homegrown%20Cursive.svg";
// Small logo for "What You Get" section
const imgDerrickRoseSmall = "/assets/Derrick%20Rose.svg";
---

<Layout title="RSVP" description="HOMEGROWN AT SIMEON">
  <main class="min-h-screen bg-black relative overflow-hidden">
    <!-- Background Image -->
    <div aria-hidden="true" class="fixed inset-0 pointer-events-none z-0">
      <img 
        alt="" 
        class="absolute inset-0 w-full h-full object-cover object-center" 
        src={imgBackground} 
      />
    </div>

    <!-- Main Content -->
    <div class="relative z-10 flex flex-col gap-[20px] items-center justify-center pb-[48px] pt-[90px] px-0 min-h-screen animate-fade-in">
      <!-- Container -->
      <div class="flex flex-col gap-[40px] md:gap-[80px] items-center overflow-clip md:px-[20px] py-0 relative shrink-0 w-full max-w-[1440px]">
        <!-- Top Branding -->
        <p class="font-prohibition leading-normal not-italic relative shrink-0 text-[#ce1141] text-[30px] text-center tracking-[3.9px] md:tracking-[48px] uppercase w-full whitespace-pre-wrap">
          Homegrown  at  Simeon
        </p>

        <!-- Main Content Box with Border -->
        <div class="flex flex-col items-center pb-0 pt-[20px] md:pt-[40px] px-0 relative shrink-0 w-full">
          <div class="flex flex-col gap-[40px] md:gap-[60px] items-center justify-center relative shrink-0 w-full">
            <!-- Logo Section -->
            <div class="flex flex-col gap-[10px] items-center overflow-clip px-[24px] py-[10px] relative shrink-0 w-full md:w-[600px]">
