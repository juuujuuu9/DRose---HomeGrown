---
import Layout from '../layouts/Layout.astro';
import NonPlayerForm from '../components/NonPlayerForm.astro';
---

<Layout title="RSVP | Non-Players">
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-6">RSVP</h1>
        <p class="text-xl mb-8">Please fill out the form below to reserve your tickets.</p>
      </div>
    </section>

    <!-- RSVP Form Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <NonPlayerForm />
        </div>
      </div>
    </section>
  </main>
</Layout>

