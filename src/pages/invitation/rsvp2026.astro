---
import Layout from '../../layouts/Layout.astro';

// Desktop logos from invitation.astro
const imgDerrickRoseDesktop = "/assets/Derrick%20Rose.svg";
const imgHomegrownCursiveDesktop = "/assets/Homegrown%20Cursive.svg";
// Mobile logos
const imgDerrickRoseMobile = "/assets/Derrick%20Rose.svg";
const imgHomegrownCursiveMobile = "/assets/Homegrown%20Cursive.svg";
---

<Layout title="RSVP | Invitation" description="HOMEGROWN AT SIMEON" ogImage="/og-image-2.png">
  <style>
    body {
      background-color: #000000;
    }
  </style>

  <!-- Desktop Layout -->
  <main class="hidden lg:flex min-h-screen bg-black relative overflow-hidden rounded-3xl">
    <!-- Main Container with border -->
    <div class="w-full h-dvh bg-[#F5F5F5] flex animate-fade-in">
      <!-- Left Section: Background Image -->
      <div class="w-1/2 h-full relative bg-white">
        <img 
          alt="Urban basketball court with elevated train tracks" 
          class="w-full h-full object-cover" 
          src="/bg-photo.png" 
        />
      </div>

      <!-- Right Section: Form -->
      <div class="w-1/2 h-full bg-[#F5F5F5] flex flex-col px-12 pt-8 overflow-y-auto">
        <!-- Logo Section -->
        <div class="flex flex-col items-center gap-[10px] pt-4 pb-10">
          <div class="h-[79px] w-[81px] relative">
            <img alt="Derrick Rose logo" class="w-full h-full object-contain" src={imgDerrickRoseDesktop} />
          </div>
          <div class="h-[110px] w-[418px] relative">
            <img alt="Homegrown" class="w-full h-full object-contain" src={imgHomegrownCursiveDesktop} />
          </div>
        </div>

        <!-- RSVP Closed Message -->
        <div class="flex-1 flex items-center justify-center">
          <div class="flex flex-col gap-6 w-full px-12 text-center">
            <h2 class="text-3xl font-bold text-gray-900 font-roboto-condensed uppercase">
              RSVPs Are Now Closed
            </h2>
            <p class="text-lg text-gray-700 font-roboto-condensed leading-relaxed max-w-[500px] mx-auto">
              Thank you for your interest. Registration for this event has closed. We look forward to seeing you at the event!
            </p>
          </div>
        </div>

        <!-- Footer -->
        <div class="flex items-center justify-between py-6 mt-auto">
          <div class="border border-gray-900 px-2 py-0.5">
            <p class="text-[12px] uppercase tracking-[0.75px] text-gray-900 font-normal font-roboto-condensed">
              HOMEGROWN AT SIMEON<br />8147 S Vincennes Ave<br />
              Chicago, IL 60620</p>
            </p>
          </div>
          <div class="flex items-center gap-2">
            <div class="text-right">
              <p class="text-[13px] uppercase text-gray-900 font-bold font-roboto-condensed">HOME</p>
              <p class="text-[13px] uppercase text-gray-900 font-bold font-roboto-condensed">GAME</p>
            </div>
            <div class="bg-[#CE1141] text-white w-10 h-16 flex items-center justify-center">
              <span class="font-prohibition text-[36px] tracking-[.70px] pb-[7px]">1</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Mobile Layout -->
  <main class="lg:hidden min-h-screen bg-black flex items-center justify-center">
    <div class="w-full max-w-md bg-[#F5F5F5] rounded-2xl overflow-hidden animate-fade-in flex flex-col">
      <!-- Logo Section -->
      <div class="flex flex-col items-center gap-[10px] pt-8 pb-6">
        <div class="h-[60px] w-[61.535px] relative">
          <img alt="Derrick Rose logo" class="w-full h-full object-contain" src={imgDerrickRoseMobile} />
        </div>
        <div class="h-[84px] w-[320px] relative">
          <img alt="Homegrown" class="w-full h-full object-contain" src={imgHomegrownCursiveMobile} />
        </div>
      </div>

      <!-- Hero Image -->
      <div class="w-full relative mb-6">
        <img 
          alt="Urban basketball court with elevated train tracks" 
          class="w-full object-cover aspect-video" 
          src="/bg-photo.png" 
        />
      </div>

      <!-- RSVP Closed Message -->
      <div class="flex flex-col px-6 pb-6">
        <div class="text-center">
          <h2 class="text-2xl font-bold text-gray-900 font-roboto-condensed uppercase mb-4">
            RSVPs Are Now Closed
          </h2>
          <p class="text-base text-gray-700 font-roboto-condensed leading-relaxed">
            Thank you for your interest. Registration for this event has closed.
          </p>
        </div>
      </div>

      <!-- Footer -->
      <div class="flex items-center justify-between px-6 py-6">
        <div class="border border-gray-900 px-3 py-1.5 rounded-none">
          <p class="text-[12px] uppercase tracking-[0.75px] text-gray-900 font-normal font-roboto-condensed">
            HOMEGROWN AT SIMEON<br />8147 S Vincennes Ave<br />
            Chicago, IL 60620</p>
        </div>
        <div class="flex items-center gap-2">
          <div class="text-right">
            <p class="text-[13px] uppercase text-gray-900 font-bold font-roboto-condensed">HOME</p>
            <p class="text-[13px] uppercase text-gray-900 font-bold font-roboto-condensed">GAME</p>
          </div>
          <div class="bg-[#CE1141] text-white w-10 h-16 flex items-center justify-center rounded-none">
            <span class="font-prohibition text-[36px] tracking-[.45px] pb-[7px]">1</span>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>


<style>
  /* Apply Roboto Condensed to all text on this page, except Prohibition font */
  main,
  main *:not(.font-prohibition) {
    font-family: 'Roboto Condensed', sans-serif !important;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  /* Checkbox styling to match button red color */
  input[type="checkbox"] {
    accent-color: #CE1141;
  }

  input[type="checkbox"]:checked {
    background-color: #CE1141;
    border-color: #CE1141;
  }
</style>
